        <p>Iconic Cities</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=mountains"> -->
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=castles"> -->
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=Amazing pools"> -->
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing Pools</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=Camping"> -->
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=farms"> -->
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=artics"> -->
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=domes"> -->
        <i class="fa-solid fa-igloo"></i>
        <p>Domes</p>
      </a>
    </div>

    <div class="filter">
      <!-- <a href="/listings?category=boats"> -->
        <i class="fa-solid fa-sailboat"></i>
        <p>Boats</p>
      </a>
    </div>

    <!-- TAX TOGGLE -->
    <div class="tax-toggle">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault"> Display total Taxes </label>
      </div>
    </div>

  </div>


  <!-- LISTINGS -->
<div class="container mt-4">
  <div class="row g-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

    <% for (let listing of listings) { %>
    <div class="col">
      <div class="card shadow-sm h-100">

        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">

          <img src="<%= listing.image.url %>" 
               class="card-img-top"
               alt="<%= listing.title %>"
               style="object-fit: cover; height: 200px;"
               loading="lazy">

          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
          </div>

          <div class="card-footer bg-white border-0">
            <small class="text-muted fw-semibold">
              â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
              <i class="tax-info"> +18% GST</i>
            </small>
          </div>

        </a>
      </div>
    </div>
    <% } %>

  </div>
</div>

<script>
  const taxToggle = document.getElementById("flexSwitchCheckDefault");

  // hide tax text initially
  const taxInfo = document.getElementsByClassName("tax-info");
  for (let info of taxInfo) {
    info.style.display = "none";
  }

  // show/hide based on toggle
  taxToggle.addEventListener("change", () => {
    for (let info of taxInfo) {
      info.style.display = taxToggle.checked ? "inline" : "none";
    }
  });
</script>