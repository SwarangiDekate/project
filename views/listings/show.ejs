  <style>
    #map {
      height: 400px;
      width: 80vh;
    }
  </style>

  <div class="row mt-3">

    <div class="col-8 offset-2">
      <h3><%= listing.title %></h3>
      <br>
    </div>

    <!-- LISTING CARD -->
    <div class="card col-8 offset-2 mb-4">
      <img src="<%= listing.image.url %>" class="card-img-top mt-3" alt="<%= listing.title %>"
        style="object-fit: cover; border-radius: 1rem; height: 25rem;">

      <div class="card-body">
        <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <!-- OWNER BUTTONS -->
<% if (currUser && currUser._id.toString() === listing.owner._id.toString()) { %>
  <div class="col-8 offset-2 mb-4">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-3">Edit</a>

    <form action="/listings/<%= listing._id %>?_method=DELETE" 
          method="POST" style="display:inline;"
          onsubmit="return confirm('Are you sure you want to delete this listing?');">
      <button class="btn btn-dark" type="submit">Delete</button>
    </form>
  </div>
<% } %>


<!-- REVIEW FORM -->
<div class="col-8 offset-2 mb-5">
  <% if (currUser) { %>
    <h4>Leave a Review</h4>

    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>

      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>

        <fieldset class="starability-slot">

          <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
          <label for="first-rate1" title="Terrible">1 star</label>

          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>

          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>

          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>

          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>

        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea class="form-control" id="comment" name="review[comment]" rows="6" required></textarea>

        <div class="invalid-feedback">Please submit a comment for the review.</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  <% } %>

    <hr>
    <hr>

<!-- ALL REVIEWS -->
<% if (listing.reviews.length) { %>
  <div class="row">
    <p><b>All Reviews</b></p>

    <% for (let review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">

          <h6>@ <%= review.author.username %></h6>

          <div class="star-display">
            <% for (let i = 1; i <= 5; i++) { %>
              <% if (i <= review.rating) { %>
                <i class="fa fa-star" style="color: gold;"></i>
              <% } else { %>
                <i class="fa fa-star" style="color: lightgray;"></i>
              <% } %>
            <% } %>
          </div>

          <p class="card-text"><%= review.comment %></p>

          <% if (currUser && currUser._id.toString() === review.author._id.toString()) { %>
            <form method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              class="mt-2">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          <% } %>

        </div>
      </div>
    <% } %>

  </div>
<% } %>

</div> <!-- END review section -->


<div class="col-8 offset-2 mb-5">
  <h3>Where you'll be</h3><br>

  <div id="map" style="height: 400px; width: 100%; border-radius: 10px;"></div>

  <script>
    async function loadMap() {
      const location = "<%= listing.location %>";

      const geoData = await geocode(location);
      if (!geoData) {
        console.error("Location not found");
        return;
      }

      // Create Leaflet map
      const map = L.map('map').setView([geoData.lat, geoData.lon], 12);

      // Add tile layer
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19
      }).addTo(map);

      // Marker + popup
      L.marker([geoData.lat, geoData.lon])
        .addTo(map)
        .bindPopup(`<b>${location}</b>`)
        .openPopup();
    }

    async function geocode(address) {
      const url = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(address)}`;

      const response = await fetch(url, {
        headers: {
          "Accept-Language": "en",
          "User-Agent": "YourAppName/1.0 (contact@example.com)"
        }
      });

      const data = await response.json();
      if (data.length === 0) return null;

      return {
        lat: parseFloat(data[0].lat),
        lon: parseFloat(data[0].lon)
      };
    }

    // Load map
    loadMap();
  </script>
</div>

<script src="/js/script.js"></script>
